<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>🍎 Lojinha.NET</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">🍎 Lojinha.NET</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-middle">
                    <ul class="navbar-nav flex-grow-1">
                        <span class="vr"></span>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Shopping Cart</a>
                        </li>
                        <span class="vr"></span>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/payment">Payment Approval</a>
                        </li>
                        <span class="vr"></span>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/tracking">Order Tracking</a>
                        </li>
                        <span class="vr"></span>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
          @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Your Friendly Grocery
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
